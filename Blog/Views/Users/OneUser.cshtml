@model Blog.Models.UserInfo
@{
    ViewBag.Title = "Find user";
}
Show one user:
<form asp-action="AllUsers" asp-controller="Users" method="post">
    <div class="form-group">
        <label class="control-label">UserId</label>
        <input name="id" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">UserName</label>
        <input name="name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Find user" class="btn btn-primary" />
    </div>
</form>

@ViewBag.Message
@if (ViewBag.Message =="") { 
<table class="table">
    <tr><td>Name</td><td>Age</td><td>Login</td><td>Password</td><td>Email</td></tr>


    <tr><td>@Model.Name</td><td>@Model.Age</td><td>@Model.Login</td><td>@Model.Password</td><td>@Model.Email</td></tr>

</table>
}